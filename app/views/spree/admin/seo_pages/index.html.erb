<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:seo_page) %>
<% end %>

<% content_for :page_actions do %>
  <li>
  </li>
<% end %>

<% if @seo_pages.any? %>
  <table class="index" id='listing_recurrings'>
    <colgroup>
      <col style="width: 30%">
      <col style="width: 25%">
      <col style="width: 25%">
      <col style="width: 20%">
    </colgroup>
    <thead>
      <tr data-hook="admin_payment_methods_index_headers">
        <th><%= Spree.t(:name) %></th>
        <th>Other Title</th>
        <th></th>
        <th data-hook="admin_payment_methods_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @seo_pages.each do |seo|%>
        <tr  data-hook="admin_recurrings_index_rows" class="<%= cycle('odd', 'even')%>">
          <td class="align-center"><%= seo.name %></td>
          <td class="align-center">TBU</td>
          <td class="align-center"></td>
          <td data-hook="admin_index_row_actions" class="actions">
            <%= link_to_edit_url edit_admin_seo_page_url(seo), :no_text => true %>
            <%= link_to_delete seo, url: admin_seo_page_url(seo), :no_text => true  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
  </div>
<% end %>