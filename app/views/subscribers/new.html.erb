<div class="row">
  <div class="col-sm-9 col-sm-offset-2">
    <h2>Subscribe To Get the Latest Products we've received!</h2>
    <p>Looking for a specific item?  Subscribe so you won't miss out!</p>
    <%= form_for :subscriber, url: '' do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <p>Name</p>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <p>Email</p>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Subscription Type *</label>
            <br/>
            <%= f.select :subscription_type, options_for_select(['weekly', 'daily'], selected: 'weekly'), include_blank: 'Type', class: 'form-control', style: 'margin: 5px 0 10px 0'%>
            <hr/>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <p>Notes</p>
            <%= f.text_field :notes, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-12">
          <h3>Subscriptions</h3>
          <%= f.collection_check_boxes(:category_ids, ::CATEGORIES, :first, :second) do |b| %>
            <%= b.check_box %>
            <%= b.label %>
            <br/>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit 'Subscribe', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>